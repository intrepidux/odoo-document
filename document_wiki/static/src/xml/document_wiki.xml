<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Recently Viewed Products Carousel -->
    <template id="latest_document_wiki" name="Document Wiki Posts">
        <div class="container">
            <div class="container">
                <h6 class="o_wevent_sidebar_title">
                        Wiki Pages
                </h6>
                <div class="row">
                    <ul class="mb-3 col-lg-12">
                        <div class="row">
                            <t t-foreach="pages" t-as="page">
                                <div class="col-lg-3 s_col_no_bgcolor pb24">
                                    <li class="row list-group-item d-flex justify-content-between" style="border:unset !important">
                                        <a t-att-href="page['url']">
                                            <span t-esc="page['name']"/>
                                        </a>
                                    </li>
                                </div>
                            </t>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </template>
</odoo>
